{
  "name": "buy.cans-backend",
  "version": "0.0.1",
  "description": "backend server for buy.cans",
  "main": "dist/server.js",
  "scripts": {
    "test": "yarn run build && DB_URL=mongodb://localhost:27017/buycans_test mocha ./test/test --exit --timeout 4000",
    "start": "yarn run serve",
    "build": "yarn run build-ts",
    "serve": "node dist/server.js",
    "watch-node": "nodemon dist/server.js",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"yarn run watch-ts\" \"yarn run watch-node\"",
    "build-ts": "tsc",
    "watch-ts": "tsc -w"
  },
  "author": "Tom Allen <tom@telega.org> (http://telega.org)",
  "license": "ISC",
  "dependencies": {
    "axios": "^0.18.0",
    "bluebird": "^3.5.1",
    "cognitive-services": "^1.1.0",
    "cors": "^2.8.4",
    "dotenv": "^5.0.1",
    "express": "^4.16.3",
    "express-handlebars": "^3.0.0",
    "lodash": "^4.17.10",
    "mongoose": "^5.1.2",
    "mongoose-autopopulate": "^0.7.0",
    "morgan": "^1.9.0",
    "natural": "^0.6.1",
    "newsapi": "^2.2.2",
    "promise-retry": "^1.1.1",
    "sleep-promise": "^6.0.0",
    "winston": "^2.4.2"
  },
  "devDependencies": {
    "@types/bluebird": "^3.5.21",
    "@types/express": "^4.16.0",
    "@types/mongodb": "^3.1.1",
    "@types/mongoose": "^5.0.18",
    "@types/node": "^10.3.5",
    "@types/q": "^1.5.0",
    "chai": "^4.1.2",
    "concurrently": "^3.6.0",
    "mocha": "^5.1.1",
    "nodemon": "^1.17.5",
    "q": "^1.5.1",
    "typescript": "^2.9.2"
  }
}
